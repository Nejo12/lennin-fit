{
  "name": "tilsf",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prerender": "tsc && vite build && node scripts/prerender.js",
    "build:prerender:advanced": "tsc && vite build && node scripts/prerender-advanced.js",
    "build:tilsf": "node scripts/build-tilsf.js",
    "build:analyze": "tsc && vite build --mode analyze",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "prettier": "prettier --write .",
    "prettier-check": "prettier --check .",
    "deploy": "./scripts/deploy.sh",
    "deploy:tilsf": "npm run build:tilsf && echo 'ðŸš€ TILSF microsite ready for deployment'",
    "deploy:tilsf:netlify": "./scripts/deploy-tilsf.sh",
    "redirect:tilsf": "node scripts/redirect-tilsf-to-lennin.js",
    "redirect:tilsf:deploy": "npm run redirect:tilsf && cd dist-tilsf && netlify deploy --prod",
    "deploy:quick": "npm run build && git add . && git commit -m 'Quick deploy' && git push origin main",
    "check:domains": "echo 'Checking domain...' && curl -I https://tilsf.com",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test:build": "npm run build && echo 'âœ… Build test passed'",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "setup": "npm install && npm run build",
    "dev:check": "npm run typecheck && npm run lint && npm run test:run",
    "format": "npm run prettier && npm run lint:fix",
    "validate": "npm run typecheck && npm run lint && npm run test:coverage && npm run build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@tanstack/react-query": "^5.85.5",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "jotai": "^2.13.1",
    "posthog-js": "^1.260.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.17.0",
    "sass-embedded": "^1.90.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.20"
  }
}
